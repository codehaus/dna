            <id>log4j</id>
            <version>1.2.8</version>
            <properties>
                <category>shared</category>
            </properties>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-release-plugin</artifactId>
            <version>1.2-dev</version>
