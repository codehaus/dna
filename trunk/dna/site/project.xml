<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>

    <name>DNA</name>
    <id>dna-site</id>

    <shortDescription>JContainer DNA web site</shortDescription>
    <description>JContainer DNA web site</description>

    <dependencies>
        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-logkit</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <id>xalan</id>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-velocity</artifactId>
            <version>20030303.205659</version>
        </dependency>
        <dependency>
            <id>velocity</id>
            <version>1.3</version>
        </dependency>
    </dependencies>

    <build>
        <!-- Only used if aggregating components by source -->
        <sourceDirectory>target/aggregate-src/java</sourceDirectory>
        <unitTestSourceDirectory>target/aggregate-src/test</unitTestSourceDirectory>

        <unitTest>
            <resource>
                <directory>target/aggregate-src/test</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>

            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
        <nagEmailAddress>jcontainer-interest@lists.codehaus.org</nagEmailAddress>
    </build>

    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <!--<report>maven-linkcheck-plugin</report>-->
        <report>maven-clover-plugin</report>
        <report>maven-license-plugin</report>
    </reports>
</project>
