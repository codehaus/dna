<?xml version="1.0"?>

<project xmlns:ant="jelly:ant">

    <goal name="dna:init"
        prereqs="metaclass:init"
        description="Initialize Plugin">

        <ant:metaclass_interceptorSet id="maven.dna.interceptors">
            <ant:interceptor
                name="org.codehaus.dna.tools.metaclass.DNAAttributeInterceptor">
                <ant:classpath>
                    <ant:pathelement path="${plugin.dir}"/>
                </ant:classpath>
            </ant:interceptor>
        </ant:metaclass_interceptorSet>

        <ant:metaclass_addToInterceptorSet
            dest="maven.metaclass.interceptors"
            source="maven.dna.interceptors"/>
    </goal>

    <goal name="dna:metagenerate"
        prereqs="dna:init,metaclass:generate"
        description="Generate DNA Descriptor files">
    </goal>

</project>
